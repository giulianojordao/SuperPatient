<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context="com.softwarenation.superpatient.fragments.SuperDigitsIntroFragment">

    <!-- TODO: Update blank fragment layout -->

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/main_super_digits"
        android:background="@drawable/game_icon_shape"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_marginTop="18dp"
        android:layout_marginLeft="22dp"
        android:layout_marginRight="22dp"
        android:gravity="center_horizontal">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/super_digits_shape"
        android:text="2 7 0 1 9 8 3"
        android:textColor="@color/Purple"
        android:textSize="26sp"
        android:padding="22dp"
        />

        <TextView
            android:id="@+id/games_intro_super_digits_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/textPurpleIntro"
            android:gravity="center_horizontal"
            android:text="@string/super_digits_intro"/>
        <TextView
            android:id="@+id/games_intro_super_digits_text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/textPurpleIntro"
            android:gravity="center_horizontal"
            android:text="Ready?"
            android:clickable="true"
            />
    </LinearLayout>

</LinearLayout>
