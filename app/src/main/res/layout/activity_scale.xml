<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.softwarenation.superpatient.ScaleActivity">
    <RelativeLayout
        android:id="@+id/scale_actionbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/Purple"
        >

        <com.softwarenation.superpatient.utility.CustomFontTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Rate"
            android:gravity="center"
            android:layout_centerInParent="true"
            style="@style/scaleTitleActionBar"
            app:customFont="HELVETICA_NEUE_THIN"
            />

        <TextView
            android:id="@+id/scale_cancel_textview"
            android:clickable="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:padding="12dp"
            android:text="cancel"
            android:textColor="@color/gray"
            />
    </RelativeLayout>

<TableLayout
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="1"
    android:layout_below="@id/scale_actionbar"
    android:stretchColumns="0"
    android:paddingTop="8dp"
    android:paddingBottom="8dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    >
    <TableRow
        android:id="@+id/scale_value_1"
        style="@style/scaleRow"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="1 - mild"
            style="@style/scaleText"
            />
    </TableRow>
    <TableRow
        android:id="@+id/scale_value_2"
        style="@style/scaleRow"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="2"
            style="@style/scaleText"
            />
    </TableRow>
    <TableRow
        android:id="@+id/scale_value_3"
        style="@style/scaleRow"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="3"
            style="@style/scaleText"
            />
    </TableRow>
    <TableRow
        android:id="@+id/scale_value_4"
        style="@style/scaleRow"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="4"
            style="@style/scaleText"
            />
    </TableRow>
    <TableRow
        android:id="@+id/scale_value_5"
        style="@style/scaleRow"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="5 - moderate"
            style="@style/scaleText"
            />
    </TableRow>
    <TableRow
        android:id="@+id/scale_value_6"
        style="@style/scaleRow"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="6"
            style="@style/scaleText"
            />
    </TableRow>
    <TableRow
        android:id="@+id/scale_value_7"
        style="@style/scaleRow"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="7"
            style="@style/scaleText"
            />
    </TableRow>
    <TableRow
        android:id="@+id/scale_value_8"
        style="@style/scaleRow"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="8"
            style="@style/scaleText"
            />
    </TableRow>
    <TableRow
        android:id="@+id/scale_value_9"
        style="@style/scaleRow"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="9"
            style="@style/scaleText"
            />
    </TableRow>
    <TableRow
        android:id="@+id/scale_value_10"
        style="@style/scaleRow"
        android:layout_marginBottom="0dp"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="10 - severe"
            style="@style/scaleText"
            />
    </TableRow>

</TableLayout>

</LinearLayout>
