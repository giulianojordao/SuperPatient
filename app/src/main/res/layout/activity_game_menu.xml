<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context="com.softwarenation.superpatient.GameMenu">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="16dp">
        <LinearLayout
            android:id="@+id/game_menu_top_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/game_menu_sound"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/sound_on"
                android:clickable="true"
                />
            <TextView
                android:id="@+id/game_menu_points"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textStyle="italic"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:text="0"
                android:gravity="right"
                android:layout_weight="1"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textStyle="italic"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:layout_marginRight="12dp"
                android:text=" pts"/>
        </LinearLayout>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/superpatient_logo_small"
            android:layout_below="@id/game_menu_top_layout"
            android:layout_centerHorizontal="true"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_centerInParent="true">
            <Button android:id="@+id/game_menu_button_resume"
                android:layout_width="match_parent" android:layout_height="wrap_content"
                android:text="@string/game_menu_resume"
                style="@style/buttonFont"
                />
            <Button android:id="@+id/game_menu_button_restart"
                android:layout_width="match_parent" android:layout_height="wrap_content"
                android:text="@string/game_menu_restart"
                style="@style/buttonFont"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                />
            <Button android:id="@+id/game_menu_button_how"
                android:layout_width="match_parent" android:layout_height="wrap_content"
                android:text="@string/game_menu_how"
                style="@style/buttonFont"
                android:layout_marginBottom="8dp"
                />
            <Button android:id="@+id/game_menu_button_home"
                android:layout_width="match_parent" android:layout_height="wrap_content"
                android:text="@string/game_menu_home"
                style="@style/buttonFont"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_alignParentBottom="true">
            <TextView
                android:id="@+id/game_menu_game_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Super Digits"
                android:layout_gravity="center_horizontal"
                style="@style/textPurpleMain"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.4"
                    android:text="Best Score:"
                    android:textSize="17sp"
                    android:textColor="@color/black"
                    android:gravity="right"/>
                <TextView
                    android:id="@+id/game_menu_points_best_score"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="0"
                    android:textSize="17sp"
                    android:textColor="@color/black"
                    android:gravity="right"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" pts"
                    android:textSize="17sp"
                    android:textColor="@color/black"
                    />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.4"
                    android:text="Today's Best Score:"
                    android:textSize="17sp"
                    android:textColor="@color/black"
                    android:gravity="right"/>
                <TextView
                    android:id="@+id/game_menu_points_today_score"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="0"
                    android:textSize="17sp"
                    android:textColor="@color/black"
                    android:gravity="right"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" pts"
                    android:textSize="17sp"
                    android:textColor="@color/black"
                    />

            </LinearLayout>
        </LinearLayout>

    </RelativeLayout>

</LinearLayout>
