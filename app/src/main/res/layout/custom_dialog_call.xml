<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <TextView
        android:id="@+id/custom_dialog_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:lineSpacingExtra="3sp"
        android:textStyle="bold"
        android:textSize="20sp"
        android:text="We are sorry you are feeling bad."
        />
    <TextView
        android:id="@+id/custom_dialog_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"
        android:lineSpacingExtra="3sp"
        android:layout_marginTop="15dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:textSize="18sp"
        android:text="We encourage you to call 1 (800) 273-8255 to speak with someone who can help you."
        />

    <Button
        android:id="@+id/custom_dialog_call_ButtonCall"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:lineSpacingExtra="3sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_gravity="center_horizontal"
        android:text="Call hotline"
        android:textColor="@color/white"
        android:textSize="15sp"
        android:background="@drawable/button_call_shape"
        android:layout_marginBottom="4dp"
        android:textAllCaps="false"/>

    <Button
        android:id="@+id/custom_dialog_call_ButtonCancel"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_gravity="center_horizontal"
        android:text="Cancel"
        android:textColor="@color/white"
        android:textSize="15sp"
        android:background="@drawable/button_call_shape"
        android:layout_marginBottom="4dp"
        android:textAllCaps="false"/>

</LinearLayout>