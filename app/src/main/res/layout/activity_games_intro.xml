<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.softwarenation.superpatient.GamesIntroActivity"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/white"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:paddingRight="4dp">
        <ImageView
            android:id="@+id/back_button_games_intro"
            android:clickable="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:padding="12dp"
            android:src="@drawable/back_arrow"/>
        <TextView
            android:id="@+id/games_intro_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:layout_marginLeft="4dp"/>
    </LinearLayout>
    <FrameLayout
        android:id="@+id/games_intro_frame"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <Button android:id="@+id/games_intro_button_start"

        android:layout_width="match_parent" android:layout_height="wrap_content"
        android:text="@string/games_intro_start_game"
        style="@style/buttonFont"
        />

</LinearLayout>
